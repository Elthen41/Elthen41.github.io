---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<BaseLayout title="最新文章" description="Elthen 的最新博客归档">
  <Fragment slot="header">
    <Header />
  </Fragment>
  <section class="mx-auto max-w-3xl px-6 py-16">
    <h1 class="text-3xl font-semibold tracking-tight">最新文章</h1>
    <p class="mt-3 text-sm text-slate-500">按发布时间倒序浏览所有内容。</p>
    <ul class="mt-10 space-y-10">
      {posts.map(({ data, slug }) => (
        <li key={slug} class="rounded-2xl border border-slate-200/60 bg-white/70 p-6 shadow-sm">
          <a class="no-underline" href={`/blog/${slug}/`}>
            <p class="text-xs uppercase tracking-[0.3em] text-slate-400">{data.tags?.join(' / ')}</p>
            <h2 class="mt-4 text-2xl font-semibold text-foreground">{data.title}</h2>
            <p class="mt-3 text-sm leading-7 text-slate-600">{data.summary}</p>
            <p class="mt-6 text-xs text-slate-400">{new Date(data.pubDate).toLocaleDateString('zh-CN')}</p>
          </a>
        </li>
      ))}
    </ul>
  </section>
  <Fragment slot="footer">
    <Footer />
  </Fragment>
</BaseLayout>