---
const navLinks = [
  { href: '/', label: '首页' },
  { href: '/blog', label: '博客' },
  { href: '/about', label: 'ABOUT' },
];
---

<header class="border-b border-slate-200/70 bg-white/70 backdrop-blur">
  <div class="mx-auto flex h-16 max-w-3xl items-center justify-between px-6">
    <a href="/" class="font-semibold tracking-tight text-lg">Elthen</a>
    <nav class="flex gap-6 text-sm text-slate-600">
      {navLinks.map((link) => (
        <a
          class="transition-colors hover:text-foreground"
          href={link.href}
        >
          {link.label}
        </a>
      ))}
    </nav>
  </div>
</header>