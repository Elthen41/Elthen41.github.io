---
import ThemeToggle from './ThemeToggle.astro';

const navLinks = [
  { href: '/', label: '首页' },
  { href: '/blog', label: '博客' },
  { href: '/about', label: 'ABOUT' },
];
---

<header class="border-b border-slate-200/70 bg-white/80 backdrop-blur-sm transition-colors dark:border-slate-700/60 dark:bg-slate-900/40">
  <div class="mx-auto flex h-16 max-w-3xl items-center justify-between px-6">
    <a href="/" class="font-semibold tracking-tight text-lg text-foreground">Elthen</a>
    <div class="flex items-center gap-5">
      <nav class="flex gap-6 text-sm text-slate-600 transition-colors dark:text-slate-300">
        {navLinks.map((link) => (
          <a
            class="transition-colors hover:text-foreground dark:hover:text-white"
            href={link.href}
          >
            {link.label}
          </a>
        ))}
      </nav>
      <ThemeToggle />
    </div>
  </div>
</header>
